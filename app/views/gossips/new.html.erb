<html>
  <%= render "shared/navbar" %>
  <body>

    <div class="jumbotron"><br>
      <h1 class="display-4">Créer un gossip :</h1>
    </div>

    <% if @gossip.errors.any? %>
      <div class="alert alert-danger" role="alert">
        <p>Nous n'avons pas réussi à créer le potin pour la (ou les) raison(s) suivante(s) :</p>
        <ul>
          <% @gossip.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>


    <div class="card text-center mx-auto my-2" style="max-width: 50rem;">
      <div class="card-header text-muted">
        <%= label_tag 'Poster un gossip :' %>
      </div><br>
      <%= form_for @gossip do |f| %>
        <div class ="form-group">
          <label> - Titre : </label>
          <%=  f.text_field :title, class:"form-control", placeholder: "Titre..."%>
        </div>
        <div class ="form-group">
          <label> - Contenu : </label>
          <%=  f.text_area :content, class:"form-control", placeholder: "Dis nous tout..."%>
        </div>
        <div class ="form-group">
          <button type ="submit" class="btn btn-success">Valider</button>
        </div>
      <%end%>
    </div>

  </body>
</html>