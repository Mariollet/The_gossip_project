  <%= render "shared/navbar" %>

<div class="jumbotron"><br>
  <h1 class="display-4">Voici touts les gossips :</h1>
</div>
    
<%= flash[:danger] %>

<% if @gossip.save %>
  <div class="alert alert-success" role="alert">
    <p>Gossip créer/modifier avec succés ! </p>
  </div>
<% end %>
  <a class="btn btn-info" href="<%= new_gossip_path %>">--> Ajouter un gossip <--</a><br><br>
    <div class="card-columns">
    <% @gossips.each do |gossip| %>
      <div class="card">
          <div class="card-body">
            <h4 class="card-title"><strong><%= gossip.user.first_name %> <%= gossip.user.last_name %></strong></h4>
            <h5 class="card-title"> <%= gossip.title %> :</h5>
            <p class="card-text"> <%= gossip.content %> </p>
            <footer class="footer">
              <small class="text-muted">
                <a><%= gossip.comments.count%> Commentaires</a><br>
                <a href="<%= user_path(gossip.user.id) %>" class="btn btn-primary">Voir l'auteur</a> | <a href="<%= gossip_path(gossip.id) %>" class="btn btn-primary">Voir le gossip</a>
              </small>
            </footer>
          </div>
      </div>
    <% end %>