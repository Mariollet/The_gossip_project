<html>
  <%= render "shared/navbar" %>
  <body>

    <div class="jumbotron"><br>
      <h1 class="display-4">Modifier l'auteur :</h1>
    </div>

    <% if @user.errors.any? %>
      <div class="alert alert-danger" role="alert">
        <p>Nous n'avons pas réussi à modifier l'auteur pour la (ou les) raison(s) suivante(s) :</p>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= form_for @user do |f| %>
      <div class ="form-group">
        <label> - Prénom : </label>
        <%=  f.text_field :first_name, class:"form-control"%>
      </div>
      <div class ="form-group">
        <label> - Nom : </label>
        <%=  f.text_field :last_name, class:"form-control"%>
      </div>
      <div class ="form-group">
        <label> - Mot de passe : </label>
        <%=  f.password_field :password, class:"form-control"%>
      </div>
      <%= flash[:danger] %>
      <div class ="form-group">
        <label> - Confirmer mot de passe : </label>
        <%=  f.password_field :confirm_password, class:"form-control"%>
      </div>
      <div class ="form-group">
        <label> - Age : </label>
        <%=  f.text_field :age, class:"form-control"%>
      </div>
      <div class ="form-group">
        <label> - Email : </label>
        <%=  f.email_field :email, class:"form-control"%>
      </div>
      <div class ="form-group">
        <label> - Bio : </label>
        <%=  f.text_area :bio, class:"form-control"%>
      </div>
      <div class= "form-group">
        <label> - City : </label>
        <%= select(:user, :city_id, City.pluck(:name, :id), class: "form-control") %>
      </div>
      <div class ="form-group">
        <button type ="submit" class="btn btn-primary">Valider</button>
      </div>
    <%end%>
   
  </body>
</html>